<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:data="clr-namespace:TestSqlGilmi.Data"
        mc:Ignorable="d"
        d:DesignWidth="600"
        d:DesignHeight="400"
        x:Class="TestSqlGilmi.CreateAndChangeBasket"
        Title="Create Basket">

	<Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto,*,Auto" Margin="10" >
		<TextBlock Text="Пользователи:" Grid.Row="0" Grid.Column="0" Margin="0,0,0,5"/>
		<ComboBox Grid.Row="1" Grid.Column="0" Name="UserComboBox" Margin="0,0,0,10">
			<ComboBox.ItemTemplate>
				<DataTemplate DataType="data:User">
					<TextBlock Text="{Binding FullName}"/>
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<TextBlock Text="Предмет:" Grid.Row="2" Grid.Column="0" Margin="0,0,0,5"/>
		<ComboBox Grid.Row="3" Grid.Column="0" Name="ItemComboBox" Margin="0,0,0,10">
			<ComboBox.ItemTemplate>
				<DataTemplate DataType="data:Item">
					<TextBlock Text="{Binding Name}"/>
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<TextBlock Text="Количество:" Grid.Row="0" Grid.Column="1" Margin="30,0,0,5"/>
		<TextBox Grid.Row="1" Grid.Column="1" Name="CounterText" Margin="30,0,0,10" />

		<Button Content="Сохранить" Grid.Row="5" Grid.ColumnSpan="2"
                HorizontalAlignment="Right" Width="100" Margin="10"
                Click="Button_Click"/>
	</Grid>
</Window>