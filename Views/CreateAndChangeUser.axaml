<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaProject1pw.CreateAndChangeUser"
		x:DataType="vm:MainWindowViewModel"
		xmlns:vm="using:AvaloniaProject1pw.ViewModels"
        Title="CreateAndChangeUser">
	<Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto" Margin="10">
		<TextBlock Text="ФИО:" Grid.Row="0"/>
		<TextBox Grid.Row="2" Name="FullNameText"/>
		
		<TextBlock Text="Номер телефона:" Grid.Row="3"/>
		<TextBox Grid.Row="4" Name="PhoneNumberText"/>
		
		<TextBlock Text="Описание:" Grid.Row="5"/>
		<TextBox Grid.Row="6" Name="DescriptionText"/>
		
		<TextBlock Text="Пользователь:" Grid.Row="7"/>
		<ComboBox ItemsSource="{Binding Users}" Width="200" Grid.Row="8" Name="ComboUsers">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding FullName}" FontWeight="Bold"/>
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		
		<Button Content="Save"
              Margin="10" Grid.Row="9" HorizontalAlignment="Right" Click="Button_Click"/>
	</Grid>
</Window>



